@model HelpDeskTeamProject.Models.InviteUserToTeamViewModel


@{
    ViewBag.Title = "InviteUser";
}

<h2>InviteUser</h2>
<p class = "text-danger">@ViewBag.ErrorMessage</p>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    
    @Html.EditorFor(model => model.TeamToInvite.Id, new { htmlAttributes = new { @class = "form-control hidden"} })
       
    <div class="form-group">
        @Html.LabelFor(model => model.TeamToInvite.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.TeamToInvite.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TeamToInvite.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EmailOfInvitedUser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EmailOfInvitedUser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailOfInvitedUser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="InviteUser" class="btn btn-default" />
        </div>
    </div>
</div>
}

